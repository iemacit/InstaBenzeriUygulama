<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/genel_arka_plan"
    tools:context=".KisiselFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="#97C6DD"
            android:layout_marginStart="100dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/black">
            <TextView
                android:layout_width="175dp"
                android:layout_height="35dp"
                android:layout_marginTop="7dp"
                android:layout_marginStart="35dp"
                android:text="HESABIM"
                android:textSize="30dp"
                android:textColor="#78BCDD"
                android:textStyle="bold|italic"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/koseler">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/person1" />

            <TextView
                android:id="@+id/kisim"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="7dp"
                android:text="ibrahim"
                android:textStyle="bold|italic"
                android:textSize="30sp"
                android:textColor="#FFFB00"/>

            <ImageView
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/bildirim" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp"

            android:layout_marginStart="50dp"
            android:layout_marginTop="270dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/koseler">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/person1" />

            <TextView
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="7dp"
                android:text="Favorilerim"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="350dp"
            android:background="#97C6DD">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/togg2" />

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>