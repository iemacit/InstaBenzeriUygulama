<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kayit_arka_plan"
    tools:context=".KayitActivity">
    <TextView
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:textSize="35sp"
        android:gravity="center"
        android:ems="10"
        android:hint="KAYIT PANELİ"
        android:textStyle="bold"
        android:layout_marginStart="90dp"/>
    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="130dp"
        android:src="@drawable/baseline_person_add_24"
        />
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/layout"
        android:layout_marginTop="320dp">
        <EditText
            android:id="@+id/name"
            android:layout_marginTop="7dp"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:ems="10"
            android:hint="Adı"
            android:inputType="textPersonName"
            android:textStyle="bold"
            android:layout_marginStart="35dp"
            android:drawableLeft="@drawable/baseline_person_24"/>
        <EditText
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:id="@+id/sifre"
            android:layout_marginTop="74dp"
            android:layout_marginStart="-230dp"  android:textSize="20sp"
            android:ems="10"
            android:hint="Sifre"
            android:inputType="textPassword"
            android:textStyle="bold"
            android:drawableLeft="@drawable/kilit"/>
        <EditText
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:id="@+id/email"
            android:layout_marginStart="-230dp"
            android:layout_marginTop="135dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:hint="Email"
            android:inputType="text"
            android:drawableLeft="@drawable/email"

            />



    </LinearLayout>

    <Button
        android:id="@+id/kaydet"
        android:layout_width="132dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="540dp"
        android:backgroundTint="#0E1E70"
        android:text="KAYDOL"
        android:textColor="#FFD13D"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>